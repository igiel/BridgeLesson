
<div class="row" ng-app="BridgeLessonModule">
    <div class="col-sm-12">
        <div class="jumbotron">
            <h1>Bidding system lesson</h1>
            <p class="lead">This site would help you improve your bidding system</p>
        </div>
        <div ng-controller="BiddingQuizController as biddingCtrl">
            <div class="row">
                <span>Please select system:</span>
                <select name="" id="" ng-model="biddingCtrl.selectedSystem" class="form-control"
                        ng-change="biddingCtrl.updateSystem()"
                        ng-options="system.Name for system in biddingCtrl.allSystems track by system.Id">
                    <option value="">Choose system</option>
                </select>
            </div>

            <div class="row" ng-if="biddingCtrl.selectedSystem && biddingCtrl.biddingExamples.length>0">
                <bidding-quiz ng-hide="biddingCtrl.allProblemsSolved"></bidding-quiz>
                <div ng-if="biddingCtrl.allProblemsSolved">
                    <bidding-quiz-results></bidding-quiz-results>
                    <a href="@Url.Action("BiddingQuiz")" class="btn btn-navigate">Restart quiz</a>
                    <a href="@Url.Action("BiddingLesson")" class="btn btn-navigate">Back to bidding page</a>
                </div>
            </div>
        </div>
    </div>
</div>
