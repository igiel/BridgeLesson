<!DOCTYPE html>
<html lang="en">
@{
    var assetsPath = "Content/themes/acme";
}
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Developed By M Abdur Rokib Promy">
    <meta name="author" content="cosmic">
    <meta name="keywords" content="Bootstrap 3, Template, Theme, Responsive, Corporate, Business">
    <link rel="shortcut icon" href="~/@assetsPath/img/favicon.png">
    <link href='http://fonts.googleapis.com/css?family=Lato' rel='stylesheet' type='text/css'>
    <link href="~/@assetsPath/assets/font-awesome/css/font-awesome.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/angularTreeView")
    @Styles.Render("~/bundles/acmestyles")

    @Scripts.Render("~/bundles/modernizr")
    <title>
        Bridge Lessons
        @(string.IsNullOrWhiteSpace(ViewBag.Title) ? "" : "| " + @ViewBag.Title)
